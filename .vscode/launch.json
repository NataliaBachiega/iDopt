    "version": "0.2.0",
    "configurations": [
        {
            "name": "Servidor",
            "type": "debugpy",
            "python": "/opt/venv/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "justMyCode": true,
            "django": true
        },
        {
            "name": "Testes unitários",
            "type": "debugpy",
            "python": "/opt/venv/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "test"
            ],
            "justMyCode": true,
            "django": true
        },
        {
            "name": "Teste unitário específico",
            "type": "debugpy",
            "python": "/opt/venv/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "test",
                "profiles.tests.test_new_user.TestNewUser.test_full_registration"
            ],
            "justMyCode": true,
            "django": true
        },
        {
            "name": "Carregar Fixtures",
            "type": "debugpy",
            "preLaunchTask": "migrate",
            "python": "/opt/venv/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "loaddata",
                "fixtures"
            ],
        },
        {
            "name": "Shell Interativo",
            "type": "debugpy",
            "python": "/opt/venv/bin/python",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "shell"
            ],
            "justMyCode": true,
            "django": true
        }
    ]
}